<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_1">

    <com.gallopmark.imagepicker.widget.SquareImageView
        android:id="@+id/mImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/default_background"
        android:scaleType="centerCrop" />

    <com.gallopmark.imagepicker.widget.SquareImageView
        android:id="@+id/mMasking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorMasking" />

    <ImageView
        android:id="@+id/mSelectedImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_image_unselect" />

    <ImageView
        android:id="@+id/mGifImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:padding="@dimen/dp_3"
        android:src="@drawable/ic_image_gif"
        android:visibility="gone" />
</FrameLayout>